import categories from "../categories";

$ const { GAM } = out.global;
$ const { id, alias, name, pageNode } = data;

$ const adSlots = ({ aliases }) => ({
  "gpt-ad-lb1": GAM.getAdUnit({ name: "lb1", aliases }),
  "gpt-ad-rail2": GAM.getAdUnit({ name: "rail2", aliases }),
  "gpt-ad-ms": GAM.getAdUnit({ name: "ms", aliases }),
});

<shared-website-section-page-default-layout
  id=id
  alias=alias
  name=name
  page-node=pageNode
  ad-slots=adSlots
>
  <@page>
    <shared-gam-display-ad id="gpt-ad-lb1" modifiers=["top-of-page"] />

    <shared-content-hero-block id=id />

    <div class="row">

      <div class="col-lg-4 mb-block">
        <shared-website-section-list-block alias="industry-news" />
      </div>

      <div class="col-lg-4 mb-block">
        <shared-gam-display-ad id="gpt-ad-rail2" />
      </div>

      <div class="col-lg-4 mb-block">
        <shared-website-section-list-block alias="home">
          <@header>Sponsored</@header>
          <@list modifiers=["sponsored"]>
            <@node modifiers=["sponsored"] />
            <@body>
              <shared-gam-display-ad id="gpt-ad-ms" />
            </@body>
          </@list>
          <@native-x enabled=false />
          <@query-params option-name="Sponsored" />
        </shared-website-section-list-block>
      </div>
    </div>

    <div class="row">

      <div class="col-lg-4 mb-block">
        <shared-website-section-list-block alias="service-repair" />
      </div>

      <div class="col-lg-4 mb-block">
        <shared-website-section-list-block alias="collision-repair" />
      </div>

      <div class="col-lg-4 mb-block">
        <shared-website-section-list-block alias="shop-operations" />
      </div>

    </div>

    <div class="row">
      <div class="col-lg-4 mb-block">
        <shared-website-section-list-block alias="distribution" />
      </div>

      <div class="col-lg-4 mb-block">
        <shared-website-section-list-block alias="training-and-resources" />
      </div>

      <div class="col-lg-4 mb-block">
        <directory-facets title="Product Guide" active-id=id facets=categories />
      </div>

    </div>

    <div class="row">

      <div class="col-lg-4 mb-block">
        <shared-website-section-list-block alias="service-repair/diagnostics-and-drivability" />
      </div>

      <div class="col-lg-4 mb-block">
        <shared-magazine-latest-issue-block publication-id="53cd1d791784f8066eb2ca77" />
      </div>

      <div class="col-lg-4 mb-block">
        <shared-magazine-latest-issue-block publication-id="53cd1d791784f8066eb2ca78" />
      </div>

    </div>
  </@page>

  <@load-more max-pages=0>
    <@query-params limit=14 skip=5 />
    <@component-input card-deck={ nativeX: null } />
  </@load-more>
</shared-website-section-page-default-layout>
