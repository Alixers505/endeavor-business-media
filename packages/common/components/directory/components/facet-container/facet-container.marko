$ const { facets, title } = input;

<if(facets.length)>
  <div class="directory-facets">
    <if(title)>
      <h3 class="directory-facets__title node-list__header">
        <a href="/directory">${title}</a>
      </h3>
    </if>
    <facet-list
      facets=facets
      active-id=input.activeId
      active-ids=input.activeIds
    />
  </div>
</if>
